        <div class="login-field">
        	<% if @current_user %>
        		<div class="me-icon"><img src="/assets/DSC48723@2x.png"></div>
	        	<div class="dropdown">
	        		<ul>
		        		<li><a href="#" class="my-dropdown-item"><%= @current_user.name %></a></li>
		        		<li><%= link_to 'プロフィールを編集', mypage_path, class: 'my-dropdown-item' %></li>
		        		<li><%= link_to 'ログアウト', logout_path, method: :delete, class: 'my-dropdown-item' %></li>
		        	</ul>
	        	</div>
			<% else %>
				<a href="#" class="login"><img src="/assets/DSC47827@2x.png"></a>
