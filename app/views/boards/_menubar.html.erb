			<% end %>
        </div>
        <div class="login-modal js-modal">
            <div class="login-modal-bg js-modal-close"></div>
            <div class="login-modal-content">
            	<div class="board-t">
					<h2>ログイン</h2>
					<div class="shape1000"></div>
			    </div>
			    <div class="board-m">
            	<%= form_for(:session, method: :post, url: login_path) do |f| %>
			        <div class="form-group">
			          <%= f.label :name, 'ユーザー名' %>
			          <%= f.text_field :name, class: 'form-control' %>
			        </div>  
			        <div class="form-group">
			          <%= f.label :password_digest, 'パスワード' %>
			          <%= f.password_field :password_digest, class: 'form-control' %>
			        </div>
			        <%= f.submit 'ログイン', class: 'btn btn-primary' %>
			    <% end %>
				</div>
